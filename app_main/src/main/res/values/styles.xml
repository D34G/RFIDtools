<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--文本颜色-->
        <item name="android:textColor">@color/md_grey_800</item>
        <!--工具栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色(深色系)-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--菜单文本的颜色-->
        <item name="android:textColor">@color/md_white_1000</item>
        <!--背景颜色-->
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <!--appbar文本的颜色-->
        <item name="android:textColorPrimary">@color/md_white_1000</item>
    </style>

    <style name="popMenuStyle" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:colorBackground">@color/md_white_1000</item>
    </style>

    <style name="dialogstyle" parent="Theme.AppCompat">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!--标题  -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item>
        <!--透明背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--窗口背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--弹窗背景是否变暗-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>